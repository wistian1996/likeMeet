<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.metting.www.likemeet.Fragments.ProcurarEventosMeetFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutList"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">




        <RelativeLayout

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/layoutMaps"
            android:layout_below="@+id/SplitLine_hor1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

        </RelativeLayout>

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchView3"
            android:queryHint="Procurar"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <SearchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:queryHint="Procurar" />

        </SearchView>

        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:layout_height= "0.5dp"
            android:background="@color/colorAccent"
            android:layout_alignBottom="@+id/searchView3"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/LayoutBaixoMap"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layoutList">

        <View
            android:id="@+id/SplitLineho2"
            android:layout_width="match_parent"
            android:layout_height= "0.5dp"
            android:background="@color/colorAccent"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
